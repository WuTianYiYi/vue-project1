{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": true,
    "noEmit": true,               // ← 新增这一行
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,

  },
  "include": ["src/**/*", "vite.config.ts"],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
